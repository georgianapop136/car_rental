@page
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model libri_identity.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details - Car";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 style="color: lawngreen;">Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Location)
        </dd>
        <dt class="col-sm-2">
            Transmission
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Transmission)
        </dd>

        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Year)
        </dd>
       
       
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Name_Customer)
        </dd>
    </dl>
</div>

@if (SignInManager.IsSignedIn(User) && User.Identity.Name == Model.Car.Name_Customer)
{
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Car.Id" class="btn btn-warning"><i class='far fa-edit'></i></a>
    </div>
}

<div class="text-center">
    <a asp-page="./Index">Back to List</a>
</div>
